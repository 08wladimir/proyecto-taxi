<style>
  .tamano{
    font-size: 0.6em;
  }
  .sizex{
    font-size: 1.5em;
  }
</style>
<p id="notice"><%= notice %></p>
<h2 class="text-center">Users<br><%= link_to 'New User', nil, class:"btn btn-default" %></h2><br>

<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Id</th>
        <th>Email</th>
        <th>Rol</th>
        <th>Phone</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
  
    <tbody class=" table table-striped">
      <% @users.each do |user| %>
        <tr>
          <td><%= user.firstName %> <%= user.lastName %></td>
          <td><%= user.identityCard %></td>
          <td><%= user.email %></td>
          <td><%= user.rol %></td>
          <td><%= user.cellphone %></td>
          <td><%= link_to '<i class="fa fa-eye sizex"></i>'.html_safe, user_path(user), class:"btn btn-primary tamano" %>
          <%= link_to '<i class="fa fa-pencil sizex"></i>'.html_safe, edit_user_path(user), class:"btn btn-success tamano" %>
          <%= link_to '<i class="fa fa-trash sizex"></i>'.html_safe, nil, method: :delete, data: { confirm: 'Do you want to remove this driver?' }, class:"btn btn-danger tamano" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
