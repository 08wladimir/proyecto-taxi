<div class="box">
            <div class="box-header">
              <h3 class="box-title">Data Table With Full Features</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive">
              <table id="example1" class="table table-striped table-hover">
                <thead>
                <tr>
                  <th>Brand</th>
                  <th>Model</th>
                  <th>Capacity</th>
                  <th>Picture</th>
                  <th></th>
                </tr>
                </thead>
                <tbody>
              <% @vehicules.each do |vehicule| %>
                <tr>
                  <td><%= vehicule.brand %></td>
                  <td><%= vehicule.model %></td>
                  <td><%= vehicule.capacity %></td>
                  <% if vehicule.picture_file_name.nil? %>
                  <td><i class="fa fa-times-circle"></i></td>
                  <%else%>
                  <td><i class="fa fa-check-circle"></i></td>
                  <%end%>
                  <td>
                    <%= link_to '<i class="fa fa-eye sizex"></i>'.html_safe, vehicule, class:"btn btn-primary tamano" %>
                    <%= link_to '<i class="fa fa-pencil sizex"></i>'.html_safe, edit_vehicule_path(vehicule), class:"btn btn-success tamano" %>
                    <%= link_to '<i class="fa fa-trash sizex"></i>'.html_safe, vehicule, method: :delete, data: { confirm: 'Do you want to remove this Vehicle?' }, class:"btn btn-danger tamano" %>
                  </td>
                </tr>
              <%end%>
                </tbody>
              </table>
            </div>
            <!-- /.box-body -->
          </div>

  
<!-- page script -->
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>

