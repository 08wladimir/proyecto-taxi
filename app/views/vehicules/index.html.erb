<style>
  .tamano{
    font-size: 0.6em;
  }
  .sizex{
    font-size: 1.5em;
  }
</style>
<h2 class="text-center">Vehicles<br><%= link_to 'New Vehicule', new_vehicule_path, class:"btn btn-default" %></h2><br>

<div class="table-responsive">
  <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Brand</th>
              <th>Model</th>
              <th>Capacity</th>
              <th>Details</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody class=" table table-striped">
            <% @vehicules.each do |vehicule| %>
              <tr>
                <td><%= vehicule.brand %></td>
                <td><%= vehicule.model %></td>
                <td><%= vehicule.capacity %></td>
                <td><%= vehicule.details %></td>
                <td>
                  <%= link_to '<i class="fa fa-eye sizex"></i>'.html_safe, vehicule, class:"btn btn-primary tamano" %>
                  <%= link_to '<i class="fa fa-pencil sizex"></i>'.html_safe, edit_vehicule_path(vehicule), class:"btn btn-success tamano" %>
                  <%= link_to '<i class="fa fa-trash sizex"></i>'.html_safe, vehicule, method: :delete, data: { confirm: 'Do you want to remove this Vehicle?' }, class:"btn btn-danger tamano" %>
                </td>
              </tr>
            <% end %>
          </tbody>
    </table>
</div>

<%= will_paginate @vehicules, renderer: BootstrapPagination::Rails %>