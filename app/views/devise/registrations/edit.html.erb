  <section class="signup-form">
    <article class="form-container">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"form-vertical" }) do |f| %>
        <div class="signup-form-section account">
          <div class="signup-form-section-title"><p>Account</p></div>
          <div class="signup-form-section-number blue">1</div>
          <div class="signup-form-section-line"></div>
            <div class="form-group ">
              
                <label for="email">Email</label>
                <%= f.email_field :email, class: "form-control", placeholder:"nam@example.com" %>
                

                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                <% end %>
                
                  <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                  <%= f.password_field :password, autocomplete: "off", class:"form-control", :onkeyup => "myFunction()", :id=>"progreso1" %>

                  <%= f.label :password_confirmation %><br />
                  <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", :onkeyup => "myFunction1()", :id=>"progreso2" %>
                  
                  <%= f.label :current_password %><br />
                  <%= f.password_field :current_password, autocomplete: "off", class:"form-control", :onkeyup => "myFunction2()", :id=>"progreso3" %>
            </div>



    <div class="signup-form-section profile">
        <div class="signup-form-section-title"><p>Profile</p></div>
        <div class="signup-form-section-number blue">2</div>
        <div class="signup-form-section-line"></div>
            <div class="form-group">
    
                <label for="name">Full Name</label>
                <div class="row form-row">
                    <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                        <%= f.text_field :firstName, class:"form-control", placeholder:"Roberto", :onkeyup => "myFunction3()", :id=>"progreso4" %>
                    </div>
                    <div class="col-md-6 col-xs-6 md-push-left-half xs-push-left-half">
                        <%= f.text_field :lastName, class:"form-control", placeholder:"Gonzalez", :onkeyup => "myFunction4()", :id=>"progreso5" %>
                    </div>
                </div>
            </div>

            <label for="name" style="color: #666;">Identity Card</label>
                <%= f.text_field :identityCard, class:"form-control", placeholder:"6312967814", :onkeyup => "myFunction5()", :id=>"progreso6" %>
            
            <div class="form-group">
                <label for="name">Picture & Birthday</label>
                <div class="row form-row">
                    <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                        <%= f.file_field :pictureProfile, class:"form-control" %>
                    </div>
                    <div class="col-md-6 col-xs-6 md-push-left-half xs-push-left-half">
                        <%= f.text_field :birthdayDate, :class=>"form-control", :id=>"datepicker", placeholder:"04/02/1990" %>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <label for="name">Cellphome & Language</label>
                <div class="row form-row">
                    <div class="col-md-6 col-xs-6 md-push-right-half sm-push-right-half xs-push-right-half">
                        <%= f.text_field :cellphone, id:"phone", type:"tel", class:"form-control", placeholder:"350-321-1233", :onkeyup => "myFunction7()", :id=>"progreso8" %>
                    </div>
                    <div class="col-md-6 col-xs-6 md-push-left-half xs-push-left-half">
                        <%= f.select(:language, ['English', 'EspaÃ±ol'], {include_blank: "Please select..."}, { :class=> 'form-control' }) %>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="signup-form-section payment">
            <div class="signup-form-section-title"><p>Payment</p></div>
            <div class="signup-form-section-number blue">3</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="cardNumber">CARD NUMBER</label>
                            <div class="input-group">
                                <%= f.text_field :paymentOption, type:"number" ,class:"form-control", placeholder:"Valid Card Number", :onkeyup => "myFunction8()", :id=>"progreso9" %>
                                <span class="input-group-addon"><i class="fa fa-credit-card"></i></span>
                            </div>
                        </div>                            
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-7 col-md-7">
                        <div class="form-group">
                            <label for="expMonth">EXPIRATION DATE</label>
                            <div class="col-xs-6 col-lg-6 pl-ziro">
                                <%= f.text_field :expirateMM, type:"number" ,class:"form-control", placeholder:"MM" %>
                            </div>
                            <div class="col-xs-6 col-lg-6 pl-ziro">
                                <%= f.text_field :expirateYY, type:"number" ,class:"form-control", placeholder:"YY" %>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-5 col-md-5 pull-right">
                        <div class="form-group">
                            <label for="cvCode">CV CODE</label>
                            <%= f.text_field :cvCode, type:"password" ,class:"form-control", placeholder:"CV" %>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="couponCode">COUPON CODE</label>
                            <%= f.text_field :cuponCode, type:"text" ,class:"form-control", placeholder:"Promo12345", :onkeyup => "myFunction9()", :id=>"progreso10" %>
                        </div>
                    </div>                        
                </div>
                <div class="row">
                    <div class="col-xs-12">
                    </div>
                </div>
                <div class="row" style="display:none;">
                    <div class="col-xs-12">
                        <p class="payment-errors"></p>
                    </div>
                </div>
            </div>

        <div class="signup-form-section submit">
          <div class="col-md-12">
            <img class="loader defer_image_loading" src="https://d1a3f4spazzrp4.cloudfront.net/free-candy/images/gfx/loader.a5b022ab0fad102f521a454df3ceb117.gif" data-src="https://d1a3f4spazzrp4.cloudfront.net/free-candy/images/gfx/loader.a5b022ab0fad102f521a454df3ceb117.gif">
              <div class="form-group">
              <%= f.submit "Save", class:"btn btn-success btn-lg btn-block" %>
              </div>
          </div>
          <div class="signup-form-section-number blue"></div>
        </div>

        <div class="form-group agree-terms">
            <p>When you create an account, you agree to our <a href="#">Terms and Conditions</a> and our <a href="#">privacy policy</a>.</p>
        </div>
      <%end%>
    </article>
  </section>
</div>
</section>


