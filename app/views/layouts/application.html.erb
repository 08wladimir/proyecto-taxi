<!DOCTYPE html>
<html>
<head>
  <title>Tootly</title>
  <meta charset="utf-8">
  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB3lmGPd_Trrp4ft5iW9pSDvN6wlLoJh1Q&libraries=places"></script>
<!--  <script type="text/javascript" src="/assets/src/user_location.js"></script><!--Este se debe importar primero -->
 <!-- <script type="text/javascript" src="/assets/src/mainmaps.js"></script> -->
 <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Fuente Roboto -->
  <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
    <style>
       body {
        font-family: 'Roboto Slab', serif !important;
       }
    </style>
  
</head>

  <body>
    <% if current_page?(root_url) %>
      <%= render 'layouts/menu' %>
      <%= yield %>
    <%else%>
      <% if !current_page?(:controller => 'landing', :action => 'index') && !current_page?('/registrate') %>
        <% if usuario_signed_in? && !current_page?(:controller => 'welcome', :action => 'home') %>
          <%= render 'layouts/menuLte' %>
        <% else %>
          <%= render 'layouts/menu' %>
          <%= yield %>
        <% end %>
      <%else%>
        <%= yield %>
      <%end%>
    <%end%>
    
  </body>
 
</html>
